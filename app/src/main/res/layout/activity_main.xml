<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/combineLatest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="combineLatest" />

    <EditText
        android:id="@+id/loginEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/passEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:text="login" />

    <Button
        android:id="@+id/switchIfEmpty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="switchIfEmpty" />

    <Button
        android:id="@+id/loadLargeImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="load Large Image (Single from Callable)" />

    <ImageView
        android:id="@+id/largeImage"
        android:layout_width="@dimen/required_size"
        android:layout_height="@dimen/required_size"
        android:scaleType="centerInside" />

    <Button
        android:id="@+id/mapAndFlashMap"
        android:layout_width="match_parent"
        android:text="Map and FlashMap"
        android:layout_height="wrap_content" />

</LinearLayout>